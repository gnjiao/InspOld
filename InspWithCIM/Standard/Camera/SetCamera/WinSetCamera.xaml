            </Grid.ColumnDefinitions>
            <Grid Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Content="相机个数:" Height="25" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" />
